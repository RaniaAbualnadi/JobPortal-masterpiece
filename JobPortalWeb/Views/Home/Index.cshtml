@model IEnumerable<JobPortalWeb.Data.JobsDefinition>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="first-section">
    <div class="mainpage-container">
        <div class="sub-container">
            <h1>Searching for Job</h1>
            <h2>
                Our target to find the correct job to the correct person
            </h2>
            @using (Html.BeginForm("index", "JobsDefinitions"))
            {
                <div class="searchjob-container">

                    <input type="text" class="search-input" name="SearchPhrase" id="SearchPhrase">
                    <button class="btn-search"> <i class="fas fa-search"></i> Search Jobs</button>

                </div>
            }
        </div>
    </div>
</section>
<section class="section-job-categroies">

    <div class="cv-banner">
        <div class="banenr-description">Create or add your resume to find your job</div>
        <a href="~/CvJobs/Index">
            <div class="banner-button"><i class="fas fa-file-import"></i>Create Resume</div>
        </a>
    </div>
</section>
<section class="section-jobs-list">

    <div class="section-title"><h2>Jobs Listing</h2>    </div>
    @*<div class="jobs-tabs-container">
            <div class="job-tab">New Jobs</div>
            <div class="job-tab">Most Visited</div>
            <div class="job-tab">Most Applied</div>
        </div>*@
    <div class="job-list-container">
        
        @foreach (var item in Model)
        {

       
        <div class="job-card">
            <div class="card-icon"><i class="fas fa-briefcase"></i></div>
            <div class="card-title">@item.JobTitle</div>
            <div class="card-department">
                 
            </div>
            <div class="card-info">
                <div class="card-job-level"><i class="fas fa-layer-group"></i>@item.Degree.Value</div>
                <div class="card-job-experiance"><i class="fas fa-calendar-week"></i>@item.MinYearsOfExperance years</div>
                <div class="type"><i class="fas fa-stopwatch"></i>Full Time</div>
            </div>
            <div class="card-footer">
                <div class="card-buttons">
                    <a href="~/JobsDefinitions/ApplyToJob?id=@item.Id" class="btn-default btn-add"><b><i class="fas fa-paper-plane"></i></b> Apply To Job</a>

                </div>
            </div>
        </div>
        }
        
    </div>
</section>

