@model JobPortal.Admin.Data.ScheduledInterview

@{
    ViewBag.Title = "Create Scheduled Interview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="page-subtitle">Scheduled Interview </div>

        <br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
              Job Application''Id
            </label>
        </div>
     
        <div class="col-md-9">
            @Html.DropDownList("JobApplicationId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.JobApplicationId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
                Invitation Date
            </label>
        </div>
   
        <div class="col-md-9">
            @Html.EditorFor(model => model.InvitationDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.InvitationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
               Interview Date
            </label>
        </div>
 
        <div class="col-md-9">
            @Html.EditorFor(model => model.InterviewDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.InterviewDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
            Is Attended
            </label>
        </div>
        
        <div class="col-md-9">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsAttended)
                @Html.ValidationMessageFor(model => model.IsAttended, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
              Interview Type Id
            </label>
        </div>

   
        <div class="col-md-9">
            @Html.DropDownList("InterviewTypeId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InterviewTypeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
           Is Passed
            </label>
        </div>
       
        <div class="col-md-9">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsPassed)
                @Html.ValidationMessageFor(model => model.IsPassed, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
             Score
            </label>
        </div>

        <div class="col-md-9">
            @Html.EditorFor(model => model.Score, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
              Archived For Later
            </label>
        </div>

        <div class="col-md-9">
            <div class="checkbox">
                @Html.EditorFor(model => model.ArchivedForLater)
                @Html.ValidationMessageFor(model => model.ArchivedForLater, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="control-label col-md-2">
            <label class="control-label ">
                Interview Report
             
            </label>
        </div>
      
        <div class="col-md-9">
            @Html.TextAreaFor(model => model.InterviewReport, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InterviewReport, "", new { @class = "text-danger" })
        </div>
    </div>
        <hr />
        <div class="form-group">
            <div class=" col-md-12 action-button-container">
                <button type="submit" class="btn btn-success btn-labeled btn-labeled-left btn-sm"><b><i class="icon-plus2"></i></b> Create</button>
                <a href="index" class="btn btn-danger btn-labeled btn-labeled-left btn-sm"><b><i class="icon-arrow-left52"></i></b> Back to List  </a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
